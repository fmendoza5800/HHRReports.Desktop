@inherits LayoutComponentBase

<input type="checkbox" id="sidebar-toggle-checkbox" class="sidebar-toggle-checkbox" />

<div class="page" id="app-layout">
    <div class="sidebar" id="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <label for="sidebar-toggle-checkbox" class="btn btn-outline-secondary btn-sm sidebar-toggle-label" title="Toggle Sidebar">
                <i class="fas fa-bars toggle-icon-expand"></i>
                <i class="fas fa-chevron-right toggle-icon-collapse"></i>
            </label>
            <UserInfo />
        </div>

        <article class="content p-0">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
